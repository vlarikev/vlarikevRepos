@model CCNetStore.Models.client

@{
    ViewBag.Title = "Delete";
}

<h2>Delete user</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Login")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientLogin)
        </dd>

        <dt>
            @Html.DisplayName("Password")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientPassword)
        </dd>

        <dt>
            @Html.DisplayName("Role")
