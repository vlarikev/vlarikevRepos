@model IEnumerable<CCNetStore.Models.client>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Login")
        </th>
        <th>
            @Html.DisplayName("Password")
        </th>
        <th>
            @Html.DisplayName("Role")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.clientLogin)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.clientPassword)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.clientRole)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.clientId }) |
        @Html.ActionLink("Details", "Details", new { id = item.clientId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.clientId })
    </td>
</tr>
}

</table>
