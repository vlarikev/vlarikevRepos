@model IEnumerable<CCNetStore.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Orders @User.Identity.Name</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Client Id")
        </th>
        <th>
            @Html.DisplayName("Login")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Total price")
        </th>
        <th>
            @Html.DisplayName("Order status")
        </th>
        <th>
            @Html.DisplayName("Delivery address")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.clientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client.clientLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deliveryAddress)
            </td>
            <td>
                @Html.ActionLink("Change delivery address", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
