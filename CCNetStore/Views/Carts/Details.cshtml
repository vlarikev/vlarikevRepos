@model CCNetStore.Models.cart

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        @Html.HiddenFor(model => model.productStatus)
        <dt>
            @Html.DisplayName("Login")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client.clientLogin)
        </dd>
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productName)
        </dd>
        <dt>
            @Html.DisplayName("Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpQuantity)
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("admin") || User.IsInRole("manager"))
    {
        @Html.ActionLink("Back to List", "Index")
    }
    else
    {
        @Html.ActionLink("Back to List", "IndexClient")
    }
</p>
