
@{
    ViewBag.Title = "Index";
}

@if (User.Identity.IsAuthenticated)
{
    <div>
        <h2>You are authorized as @User.Identity.Name</h2>
        @if (User.IsInRole("admin"))
        {
            <h3>@Html.ActionLink("Admin Page", "IndexManager", "Products")</h3>
        }
        else if (User.IsInRole("manager"))
        {
            <h3>@Html.ActionLink("Manager Page", "IndexManager", "Products")</h3>
        }
        else
        {
            <h3>@Html.ActionLink("Client Page", "IndexClient", "Products")</h3>
        }
    </div>
}
else
{
    <div>
        <h2>You are not loginned or registered</h2>
        <h3>@Html.ActionLink("Registration", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</h3>
        <h3>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</h3>
    </div>
}